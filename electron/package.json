{
    "name": "win-watch-electron",
    "type": "module",
    "version": "1.0.0",
    "description": "Windows UI Automation Monitor",
    "author": "Max Zakharzhevskiy",
    "license": "ISC",
    "keywords": [],
    "main": "./out/main/index.js",
    "devDependencies": {
        "@electron-toolkit/preload": "^3.0.0",
        "@tailwindcss/vite": "^4.1.18",
        "@types/node": "^25.2.1",
        "@types/react": "^19.2.13",
        "@types/react-dom": "^19.2.3",
        "@vitejs/plugin-react": "^5.1.3",
        "electron": "^40.2.1",
        "electron-builder": "^26.0.12",
        "electron-devtools-installer": "^4.0.0",
        "electron-vite": "^5.0.0",
        "tailwindcss": "^4.0.0",
        "typescript": "^5.3.3",
        "vite": "^7.3.1"
    },
    "dependencies": {
        "@electron-toolkit/utils": "^4.0.0",
        "@radix-ui/react-checkbox": "^1.3.3",
        "@radix-ui/react-context-menu": "^2.2.16",
        "@radix-ui/react-dialog": "^1.1.15",
        "@radix-ui/react-dropdown-menu": "^2.1.16",
        "@radix-ui/react-label": "^2.1.8",
        "@radix-ui/react-menubar": "^1.1.16",
        "@radix-ui/react-radio-group": "^1.3.8",
        "@radix-ui/react-scroll-area": "^1.2.10",
        "@radix-ui/react-slot": "^1.0.2",
        "@radix-ui/react-switch": "^1.2.6",
        "@radix-ui/react-tabs": "^1.1.13",
        "@radix-ui/react-toggle": "^1.1.10",
        "class-variance-authority": "^0.7.0",
        "clsx": "^2.1.0",
        "jotai": "^2.17.1",
        "lucide-react": "^0.563.0",
        "pm-manifest-icons": "^1.0.6",
        "react": "^19.2.4",
        "react-dom": "^19.2.4",
        "react-resizable-panels": "^4.6.2",
        "sonner": "^2.0.7",
        "tailwind-merge": "^3.4.0",
        "tailwindcss-animate": "^1.0.7",
        "valtio": "^2.3.0"
    },
    "scripts": {
        "tsc": "tsc --noEmit -w",
        "dev": "electron-vite dev",
        "dev:debug": "electron-vite dev --inspect",
        "build": "electron-vite build",
        "preview": "electron-vite preview"
    },
    "build": {
        "appId": "com.maxzz.winwatch",
        "productName": "WinWatch",
        "directories": {
            "output": "dist"
        },
        "afterPack": "build/afterPack-uiaccess.cjs",
        "files": [
            "out/**"
        ],
        "extraResources": [
            {
                "from": "../dist-electron/plugins",
                "to": "plugins"
            }
        ],
        "win": {
            "target": [
                {
                    "target": "nsis",
                    "arch": [
                        "x64"
                    ]
                }
            ]
        },
        "nsis": {
            "perMachine": true,
            "allowToChangeInstallationDirectory": false
        }
    }
}